{
  "tasks": {
    "dev": "deno run --allow-all --watch server.ts",
    "build": "deno run --allow-all build.ts",
    "dev:full": "deno task build && deno task dev",
    "watch": "deno run --allow-all build.ts --watch"
  },
  "imports": {
    "@hono/hono": "jsr:@hono/hono@^4.8.2",
    "esbuild": "https://deno.land/x/esbuild@v0.25.5/mod.js"
  },
  "compilerOptions": {
    "lib": ["dom", "es2022", "deno.ns"],
    "strict": true
  },
  "fmt": {
    "semiColons": true
  }
}